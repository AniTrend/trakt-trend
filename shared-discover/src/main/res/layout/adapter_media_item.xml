<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/lg_margin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground"
    app:cardElevation="0dp"
    app:cardCornerRadius="@dimen/lg_margin">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <co.anitrend.arch.ui.view.image.SupportImageView
            android:id="@+id/showImage"
            android:layout_width="@dimen/series_image_sm"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:aspectRatio="1.67"
            tools:src="@sample/poster"
            tools:scaleType="centerCrop"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/showTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="@dimen/lg_margin"
            android:background="@color/titleShade"
            android:textAppearance="?attr/textAppearanceBody2"
            tools:text="@sample/response.json/title" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.material.card.MaterialCardView>
